{
  "name": "Open in Code",
  "version": "0.2.1",
  "manifest_version": 2,
  "description": "This extension downloads and opens current viewing Github file in Microsoft Visual Studio Code",
  "homepage_url": "https://github.com/mamal72/open-in-vscode",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Open in Code"
  },
  "permissions": [
    "tabs",
    "downloads",
    "downloads.shelf",
    "https://github.com/*"
  ]
}
